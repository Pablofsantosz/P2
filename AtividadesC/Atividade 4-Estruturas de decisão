//Quetsao 5:
# include <stdio.h>

int main(){
    int maior,n1,n2;
    printf("Informe um numero abaixo :\n");
    scanf("%d",&n1);

    printf("informe um segundo numero abaixo :\n");
    scanf("%d",&n2);

    if (n1>n2){
      printf("O 1 numero digitado é maior .");
    } else if(n2>n1){
      printf("o 2 numero digitado é maior .");
    } else {
      printf("os numeros sao iguais .");
      return 0 ;
    }
}
